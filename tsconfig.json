{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      // WEBAPP PATHS
      "@/components/*": [
        "src/components/*"
      ],
      "@/containers/*": [
        "src/containers/*"
      ],
      "@/store/*": [
        "src/@features/store/*"
      ],
      "@/styling/*": [
        "src/@features/styling/*"
      ],
      "@/services/*": [
        "src/@features/services/*"
      ],
    }
  },
  "include": [
    "src",
    "index.d.ts"
  ],
}